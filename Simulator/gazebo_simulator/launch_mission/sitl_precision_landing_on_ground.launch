<launch>
	<!-- Launch Gazebo Simulation -->
	<arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.05"/>
	<arg name="world" default="$(find prometheus_gazebo)/worlds/autonomous_landing_on_ground.world"/>	<!-- 加载降落板至地上 -->
	<arg name="sdf" default="$(find prometheus_gazebo)/models/P300_Monocular_down/P300_Monocular_down.sdf"/>	<!-- 加载单目摄像头朝下的飞机模型 -->
	<arg name="model" default="P300_Monocular_down"/>
    <include file="$(find prometheus_gazebo)/launch/sitl_px4_sender.launch">	<!-- 加载px4_sender控制器 -->
	  <arg name="world" value="$(arg world)"/>
	  <arg name="sdf" value="$(arg sdf)"/>
	  <arg name="model" value="$(arg model)"/>
      <arg name="x" value="$(arg x)"/>
      <arg name="y" value="$(arg y)"/>
      <arg name="z" value="$(arg z)"/>
    </include>

	<!-- run the landpad_det.cpp -->
    <node pkg="prometheus_detection" type="landpad_det" name="landpad_det" output="screen">
        <param name="camera_topic" type="string" value="/P300_Monocular_down/Monocular/image_raw" />
        <param name="camera_info" type="string" value="camera_param_gazebo_monocular.yaml" />
    </node>
	
	<!-- run the autonomous_landing.cpp -->
	<node pkg="prometheus_mission" type="autonomous_landing_on_ground" name="autonomous_landing_on_ground" output="screen" launch-prefix="gnome-terminal --">
		<rosparam command="load" file="$(find prometheus_mission)/autonomous_landing/autonomous_landing.yaml" />	
		<param name="debug_mode" value="0" />
	</node>

</launch>

